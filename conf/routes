# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET     /                    controllers.PokemonController.index

GET     /pokemon                    controllers.PokemonController.index

POST     /pokemon/auth                controllers.PokemonController.auth

GET     /pokemon/cp                 controllers.PokemonController.cp

GET     /pokemon/logout                 controllers.PokemonController.logout

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
